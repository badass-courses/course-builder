{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": ["PORT"],
	"pipeline": {
		"topo": {
			"dependsOn": ["^topo"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [
				".next/**",
				"dist/**",
				"lib/**",
				"providers/**",
				"inngest/**",
				"schemas/**",
				"*.js",
				"*.d.ts",
				"*.d.ts.map",
				"!.next/cache/**"
			],
			"outputMode": "new-only"
		},
		"postbuild": {
			"dependsOn": ["build"],
			"outputs": ["public/sitemap.xml", "public/robots.txt"]
		},
		"lint": {
			"dependsOn": ["^topo", "^build"],
			"outputs": []
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		},
		"typecheck": {
			"dependsOn": ["^topo", "^build"]
		},
		"test": {
			"outputs": ["coverage/**"],
			"inputs": ["src/**/", "test/**/"],
			"outputMode": "new-only"
		},
		"test:e2e": {
			"outputs": [
				"blob-report/**",
				"playwright-report/**",
				"playwright/.cache/**",
				"test-results/**"
			]
		},
		"test:watch": {
			"cache": false
		}
	}
}
