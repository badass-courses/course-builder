{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "PORT"
  ],
  "tasks": {
    "topo": {
      "dependsOn": [
        "^topo"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "dist/**",
        "lib/**",
        "providers/**",
        "inngest/**",
        "schemas/**",
        "*.js",
        "*.d.ts",
        "*.d.ts.map",
        "!.next/cache/**"
      ],
      "outputLogs": "new-only"
    },
    "postbuild": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "public/sitemap.xml",
        "public/robots.txt"
      ]
    },
    "lint": {
      "dependsOn": [
        "^topo",
        "^build"
      ],
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": [
        "^topo",
        "^build"
      ]
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "inputs": [
        "src/**/",
        "test/**/"
      ],
      "cache": false,
      "outputLogs": "new-only"
    },
    "test:e2e": {
      "outputs": [
        "blob-report/**",
        "playwright-report/**",
        "playwright/.cache/**",
        "test-results/**"
      ]
    },
    "test:watch": {
      "cache": false
    }
  }
}
