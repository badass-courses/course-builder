{
  "name": "@coursebuilder/adapter-drizzle",
  "version": "0.0.1",
  "description": "Drizzle adapter for Course Builder.",
  "scripts": {
    "clean": "rm -rf ./dist",
    "test": "pnpm test:mysql && pnpm test:sqlite && pnpm test:pg",
    "test:mysql": "pnpm clean && ./test/mysql/test.sh",
    "test:sqlite": "pnpm clean && ./test/sqlite/test.sh",
    "test:pg": "pnpm clean && ./test/pg/test.sh",
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "keywords": ["coursebuilder", "drizzle"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "types": "./index.d.ts",
  "files": [
    "*.d.ts*",
    "*.js",
    "lib",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    }
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "tsup": "6.7.0",
    "@libsql/client": "0.5.6",
    "@types/better-sqlite3": "7.6.9",
    "@types/uuid": "9.0.8",
    "better-sqlite3": "9.4.3",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.29.3",
    "mysql2": "^3.2.0",
    "postgres": "^3.3.4"
  }
}
