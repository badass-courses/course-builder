	.aside {
		display: grid;
		gap: 0.5rem;
		grid-template-columns: 1.875rem auto;
		margin: 2rem 0;
		padding: 1rem 1rem 0 0.5rem;
		position: relative;

		&::after,
		&::before {
			/* animation: var(--animation-gradient-shift); */
			background: var(--gray-100);
			background-size: 200%;
			content: '';
			height: 2px;
			left: 0;
			position: absolute;
			width: 100%;
		}

		&::after {
			animation-direction: reverse;
			bottom: 0;
		}

		&::before {
			top: 0;
		}
	}

	.icon {
		padding: 0;
	}

	.icon[data-variant='default'] {
		margin-top: -0.375rem;
	}

	.content {
		& :global(:is(p, ul, ol)) {
			color: var(--text-muted);
			font-size: 0.875rem;
			margin: 1rem 0 0;
		}

		& :global(p:first-of-type) {
			margin-top: 0;
		}

		& :global(> :last-child) {
			padding-bottom: 1rem;
		}
	}
</style>
