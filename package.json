{
  "name": "course-builder-turbo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=v18.16.0",
    "pnpm": ">=8.7.0"
  },
  "scripts": {
    "build:all": "turbo run build",
    "build": "turbo run build --filter \"./packages/*\" --filter \"create-course-app\"",
    "clean": "turbo run clean && git clean -xdf node_modules",
    "dev:all": "turbo run dev",
    "dev": "turbo run dev --filter \"./packages/*\"",
    "lint": "turbo run lint && manypkg check",
    "format:check": "prettier --check .",
    "format": "prettier . --write --list-different",
    "pre-commit": "lint-staged",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "typecheck": "turbo run typecheck",
    "prepare": "husky install",
    "check": "turbo lint typecheck && pnpm format:check && manypkg check"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,cjs,mjs}": [
      "pnpm run format"
    ]
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@coursebuilder/eslint-config": "0.0.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@manypkg/cli": "^0.21.0",
    "@types/eslint": "^8.44.2",
    "@types/jest": "^29.5.8",
    "@types/node": "^18.17.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-turbo": "^1.10.12",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-isaacscript": "^2.6.7",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  }
}
